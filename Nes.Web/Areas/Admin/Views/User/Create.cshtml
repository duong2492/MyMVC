@model Nes.Dal.EntityModels.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@Nes.Resources.NesResource.AdminUserCreateTitlePage</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Nes.Resources.NesResource.AdminNoteForm
            </div>
            <div class="panel-body">
                @if (TempData["Notification"] != null)
                {
                    @Html.Hidden("NotificationAutoHide", TempData["NotificationAutoHide"])
                    <div id="NotificationBox" class="@TempData["NotificationCSS"]" style="display: none">
                        @TempData["Notification"]
                    </div>
                }
                @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @role = "form" }))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            @if (ViewContext.ViewData.ModelState.Count > 0)
                            {
                                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                            }
                        </div>
                        <div class="col-lg-6">

                            @Html.AntiForgeryToken()

                            @Html.HiddenFor(model => model.CreatedBy, new { @class = "form-control", @Value = User.Identity.Name, @Type = "hidden" })
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.UserName)</label>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })*@
                            </div>

                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Password)</label>
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.PasswordLevel2)
                                </label>

                                @Html.TextBoxFor(model => model.PasswordLevel2, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.PasswordLevel2, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Email)
                                </label>

                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Mobile)
                                </label>
                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Name)
                                </label>

                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
                            </div>



                            @*@Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger" })*@

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Address)
                                </label>
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })*@
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.Sex)
                                </label>
                                @Html.DropDownListFor(model => model.Sex,
                                    new List<SelectListItem>()
                                       {
                                       new SelectListItem { Text = "Nam", Value = "true",Selected=true },
                                       new SelectListItem { Text = "Nữ",  Value = "false" },
                                       }, new { @class = "form-control" })
                                @*@Html.CheckBoxFor(model => model.Sex, new { @class = "checkbox" })*@
                                @*@Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.LabelFor(model => model.IsLocked)
                                </label>
                                @Html.CheckBoxFor(model => model.IsLocked, new { @checked = "checked", @class = "checkbox" })
                                @*@Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-success">@Nes.Resources.NesResource.AdminSaveButtonText</button>
                            <button type="button" onclick="window.location.href='@Url.Action("Index", "User", null)'" class="btn btn-default">@Nes.Resources.NesResource.GoBackToListText</button>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                }
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>