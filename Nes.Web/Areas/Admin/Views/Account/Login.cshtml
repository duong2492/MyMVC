@model Nes.Web.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    @Styles.Render("~/Content/themes/admin/common")
    @Scripts.Render("~/bundles/adminjs")
    <link href="~/Content/themes/admin/css/custom.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            if ($(".validation-summary-valid li:visible").length === 0) {
                $(".validation-summary-valid").hide();
            }
        });
    </script>
</head>
<body id="Login">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Nes.Resources.NesResource.AdminLoginHeaderText</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                        {
                            @Html.AntiForgeryToken()
                            if (ViewContext.ViewData.ModelState.Count > 0)
                            {
                                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                            }
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "E-mail", @autofocus = "true" })
                                    @*@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @type = "password", @value = "" })
                                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="@Nes.Resources.NesResource.AdminLoginButtonText." class="btn btn-lg btn-success btn-block" />
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
